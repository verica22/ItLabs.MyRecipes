@using PagedList.Mvc;
@model PagedList.IPagedList<ItLabs.MyRecipes.Domain.Recipe>
@*@model IEnumerable<ItLabs.MyRecipes.Domain.Recipe>*@

@{
    ViewBag.Title = "Index";
}

@*<h3>My Recipes</h3>*@



<div class="container text-center">
    <hr />

    <div class="row">
        <div id="hederNav" class="container text-left col-sm-6">


            <div class="col-sm-4">

                <p><b>Recipe Name</b></p>
            </div>
            <div class="col-sm-2">
                @*<p>Edit</p>*@

            </div>
            <div class="col-sm-2">

                <p><b>Done</b></p>
            </div>
            <div class="col-sm-2">

                <p><b>Favorites</b></p>
            </div>
            <div class="col-sm-2">

                @*<p>Delete</p>*@
            </div>
            @if (Model.Count() == 0)
            {
                <div>
                    <p>No recipes match search criteria</p>
                </div>
            }
            else
            {
                foreach (var item in Model)
                {
                    using (Html.BeginForm("Remove", "Recipes", new { id = item.Id }))
                    {
                        <div class="container text-left">
                            <div class="col-sm-4">

                                <label>
                                    <a data-details-id="@item.Id" data-details-href="@Url.Action("Details", new { id = item.Id })">@Html.DisplayFor(modelItem => item.Name)</a>
                                </label>

                            </div>
                            <div class="col-sm-2">
                                <label>
                                    <a data-details-id="@item.Id" data-details-href="@Url.Action("Edit", new { id = item.Id })">Edit</a>
                                </label>
                            </div>
                            <div class="col-sm-2">

                                @Html.DisplayFor(modelItem => item.Done)
                            </div>
                            <div class="col-sm-2">

                                @Html.DisplayFor(modelItem => item.Favorites)
                            </div>
                            <div class="col-sm-2">

                                @using (Html.BeginForm())
                        {
                                    @Html.AntiForgeryToken()

                                    <div class="form-actions no-color">
                                        <input type="image" src="~/Photos/IconDelete.png" value="Delete" class="btn btn-default" onclick="return confirm('Are you sure?')" />

                                    </div>
                                }
                                @*<a href='@Url.Action("Remove", new { id = item.Id })'>
                                        <img src='@Url.Content("~/Photos/IconDelete.png")' onclick="return confirm('Are you sure?')"/>
                                    </a>*@

                            </div>

                        </div>
                        <hr />
                    }
                }

            }

        </div>
        <br />
        <br />

        <div class="col-sm-6 container text-left" id="ShowDetails-">

        </div>


    </div>
</div><br>

<div class="pager">
    @* Page @Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount*@
    @Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
</div>